generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(uuid())
  name      String
  phone     String    @unique
  password  String
  rules     String[]
  is_admin  Boolean   @default(false)
  addresses Address[]

  @@map("users")
}

model Cup {
  id                  String  @id @default(uuid())
  size                Int     @unique
  price               Float
  in_stock            Boolean @default(true)
  description         String
  quantity_additional Int

  @@map("cups")
}

model Additional {
  id       String  @id @default(uuid())
  name     String
  price    Float
  in_stock Boolean @default(true)

  @@map("additional")
}

model Address {
  id         String  @id @default(uuid())
  street     String
  number     Int
  district   String
  complement String?
  users      User[]

  @@map("addresses")
}
